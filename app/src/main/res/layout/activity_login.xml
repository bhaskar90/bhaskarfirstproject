      <Button
          android:id="@+id/vT_al_login"
          android:text="Login"
          android:gravity="center"
          android:background="@color/material"
          android:textSize="18sp"
          android:layout_marginLeft="25dp"
          android:layout_marginRight="25dp"
          android:textColor="@color/white"
