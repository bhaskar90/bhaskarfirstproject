<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.system.chatapp.login.LoginActivity">
  <!--<include layout="@layout/toolbar"/>-->


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="start"
      android:layout_marginTop="0dp"
      android:layout_gravity="bottom"
      android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/chat_green"
        android:layout_marginBottom="0dp"
        android:layout_gravity="center"
        android:id="@+id/imageView2"
        android:layout_marginTop="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="0dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/material"
        android:text="CHAT ROOM"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textSize="14sp"
        android:textColor="@color/material"
        android:text="Please login to the chat room to continue chatting with your friends"/>
   <!-- <TextView
          android:layout_width="match_parent"
