<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_request_received"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/plan_back"
    tools:context="com.example.system.chatapp.home.request.RequestReceivedActivity">
    <include layout="@layout/toolbar"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/vT_agm_tabLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_height="50dp"
        app:tabBackground="@android:color/transparent"
        app:tabIndicatorColor="@color/material"
        app:tabIndicatorHeight="3dp"
        app:tabTextColor="@color/dark_gray"
        app:tabSelectedTextColor="@color/material"
        app:tabMaxWidth="0dp"
        app:tabGravity="fill"
        app:tabMode="fixed" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vP_arr_notificationpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--<ListView
        android:id="@+id/vL_arr_requestlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/red"
        android:dividerHeight="1dp">
    </ListView>-->

</LinearLayout>
